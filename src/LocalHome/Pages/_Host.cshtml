@page "/"
@namespace LocalHome.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<script>
    (function () {
        if (document.cookie) {
            if (document.cookie.indexOf('light') > 0) {
                var htmlelement = document.getElementsByTagName('html')[0];
                htmlelement.classList.add('light');
            }
        }
    })()
    function switchtheme(theme) {
        var htmlelement = document.getElementsByTagName('html')[0];
        if (theme === 'light') {
            htmlelement.classList.add(theme);
            document.cookie = theme;
        } else {
            htmlelement.classList.remove('light');
            document.cookie = theme;
        }
    }
</script>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LocalHome</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=B612&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Exo+2&display=swap" rel="stylesheet">
    <!--<link href="https://fonts.googleapis.com/css?family=IBM+Plex+Serif&display=swap" rel="stylesheet">-->
</head>
<body>
    <span onclick="switchtheme('dark')" id="darktheme"></span>
    <span onclick="switchtheme('light')" id="lighttheme"></span>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <script src="_framework/blazor.server.js"></script>
    <script src="js/site.js"></script>
</body>
</html>
